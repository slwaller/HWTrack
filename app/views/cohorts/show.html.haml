.jumbotron
  %center
    %h1.cohort Class
    = @cohort.course
    %br
    %br
    = button_to "Add Student", new_location_cohort_student_path(@location, @cohort), method: :get, class: "buttonlink"
    %br
    %br
    %br
      - @cohort.students.each do |student|
        %li
          %strong
            = link_to "#{student.first_name} - #{student.last_name}", location_cohort_student_path(@location, @cohort, student)
            |
            = link_to "Edit", edit_location_cohort_student_path(@location, @cohort, student)
            |
            = link_to "Delete", location_cohort_student_path(@location, @cohort, student), method: :delete
    %br
    - if current_user.admin?
      = button_to "Assign homework", new_assignment_path(@assignment), class: "buttonlink", method: :get
    %br
    %br
    = button_to "Current Assignments", assignments_path, class: "buttonlink", method: :get